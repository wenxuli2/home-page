    .article
        margin-left 200px
        width auto
        
        pre  
            background #282c34
            margin 10px

            overflow hidden
            overflow-x auto
            // white-space nowrap
            code  
                padding 10px
                // background yellow
                display inline-block
                font-size 16px
                color #cccccc
    // 代码复制
    .highlight 
        background pink
        position relative
    .btn-copy 
        display inline-block
        cursor pointer
        background-color #eee
        background pink
        background-image linear-gradient(#fcfcfc, #eee)
        border 1px solid #d5d5d5
        border-radius 3px
        user-select none
        font-size 13px
        font-weight 700
        line-height 20px
        color #333
