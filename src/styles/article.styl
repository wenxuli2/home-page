body 
    position relative
.main
    margin-left 500px
    width auto
    // overflow hidden
    position absolute
    left 0 
    top 0 
    right 0 
    bottom 0
    margin auto
        
    
    width 1200px
    height auto
    // background #f4f5f5
    
    .article_munu
        position fixed 
        width 180px
        height 100%
        overflow-y auto
        // background pink
        h3 
            text-align center
            margin-bottom 10px
            
            
        li
            width 100%
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            margin-top 5px

        &::-webkit-scrollbar 
            width 10px
            height 1px
        &::-webkit-scrollbar-thumb 
            border-radius 10px
            background #e4e6eb
        &::-webkit-scrollbar-track 
            border-radius 10px
            background #fff

  
    .arrow
