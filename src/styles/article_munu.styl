// stylus -w src/styles/article_munu.styl -o  src/css/article_munu.css
body
    background-image url('../images/bg.jpg')
    background-repeat no-repeat
    background-size cover
    display flex
    justify-content center
    // align-items center
.main
    display flex
    justify-content flex-start
    flex-direction column
    align-items center
    width 1200px
    // height 1200px
    // background pink
    .search_box 
        // background green
        margin-top 50px
        width 700px
        // height 100px
        .search_input_text 
            border 1px solid #b6b6b6
            width 600px
            background #fff
            height 33px
            line-height 33px
            font-size 18px
            padding 3px 0 0 7px
            border-radius 5px 0  0 5px
        .search-input-button 
            width 90px
            height 38px
            color #fff
            font-size 16px
            letter-spacing 3px
            background #3385ff
            border .5px solid #2d78f4
            margin-left -5px
            vertical-align top
            opacity .9
            border-radius 0 5px 5px 0
            // box-shadow 0 1px 1px #333
            &:hover 
                opacity 1
                box-shadow 0 1px 1px #333
                cursor pointer
        .suggest
            width 607px
            position absolute
            // border 1px solid #999
            background #fff
            
            ul 
                list-style none
                // display none
                margin 0
                padding 0
                li 
                    padding 3px
                    font-size 17px
                    line-height 25px
                    cursor pointer
                    
                    &:hover 
                        background-color #e5e5e5
    .content-list
        margin-top 100px
        font-size 16px
        width 100%
        display flex
        // space-between
        justify-content space-around
        flex-wrap wrap
        li
            width 48%
            min-width 500px
            height 200px
            background #ffffff
            padding-left 10px
            overflow hidden
            text-overflow ellipsis
            // padding-right 20px
            border-radius 10px
            .title,.details
                a
                    color #551a8b
                    font-size 16px
            &:nth-child(2n)
                margin-bottom 20px
            // &:nth-child(2n+1)
            //     margin-right 20px